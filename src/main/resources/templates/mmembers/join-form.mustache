{{> layout/header}}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4 text-center">회원가입</h3>

            <form action="/members/join" method="post">

                <div class="mb-3">
                    <label for="name" class="form-label">이름</label>
                    <input type="text" class="form-control" id="name" name="name" required minlength="2" maxlength="20">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">이메일</label>
                    <input type="email" class="form-control" id="email" name="email" required maxlength="100">
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">비밀번호</label>
                    <input type="password" class="form-control" id="password" name="password" required minlength="4" maxlength="20">
                </div>

                <button type="submit" class="btn btn-success w-100 mb-3">가입하기</button>

                <div class="text-center">
                    <a href="/members/login-form" class="btn btn-link">이미 계정이 있으신가요? 로그인</a>
                </div>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}