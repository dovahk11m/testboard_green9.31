{{> layout/header}}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4 text-center">로그인</h3>

            <form action="/members/login" method="post">

                <div class="mb-3">
                    <label for="email" class="form-label">이메일</label>
                    <input type="email" class="form-control" id="email" name="email" value="chulsoo@test.com" required maxlength="100">
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">비밀번호</label>
                    <input type="password" class="form-control" id="password" name="password" value="1234" required maxlength="20">
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">로그인</button>

                <div class="text-center">
                    <a href="/members/join-form" class="btn btn-link">회원가입하기</a>
                </div>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}