{{> layout/header}}

<h3 class="mb-4">게시글 수정</h3>

{{#boards}}
    <form action="/boards/update/{{id}}" method="post">

        <div class="mb-3">
            <label for="title" class="form-label">제목</label>
            <input type="text" class="form-control" id="title" name="title" value="{{title}}" required maxlength="100">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">내용</label>
            <textarea class="form-control" id="content" name="content" rows="10" required maxlength="1000">{{content}}</textarea>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-warning me-2">수정 완료</button>
            <a href="/boards/{{id}}" class="btn btn-secondary">취소</a>
        </div>
    </form>
{{/boards}}

{{> layout/footer}}