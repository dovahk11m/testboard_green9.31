{{> layout/header}}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>전체 게시글 목록</h3>
        {{#sessionUser}}
            <a href="/boards/save-form" class="btn btn-primary">글쓰기</a>
        {{/sessionUser}}
    </div>

    <table class="table table-hover">
        <thead>
        <tr class="table-primary">
            <th style="width: 10%;">번호</th>
            <th style="width: 50%;">제목</th>
            <th style="width: 20%;">작성자</th>
            <th style="width: 20%;">작성일</th>
        </tr>
        </thead>
        <tbody>
        {{#pageData.content}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/boards/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdAt}}</td>
            </tr>
        {{/pageData.content}}

        {{^pageData.content}}
            <tr>
                <td colspan="4" class="text-center text-muted">등록된 게시글이 없습니다.</td>
            </tr>
        {{/pageData.content}}
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            {{#pageData.navigation.hasPrev}}
                <li class="page-item">
                    <a class="page-link" href="?page={{pageData.navigation.prevPage}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{/pageData.navigation.hasPrev}}
            {{^pageData.navigation.hasPrev}}
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&laquo;</span>
                </li>
            {{/pageData.navigation.hasPrev}}

            {{#pageData.navigation.pageNumbers}}
                <li class="page-item {{#isCurrent}}active{{/isCurrent}}">
                    <a class="page-link" href="?page={{number}}">{{display}}</a>
                </li>
            {{/pageData.navigation.pageNumbers}}

            {{#pageData.navigation.hasNext}}
                <li class="page-item">
                    <a class="page-link" href="?page={{pageData.navigation.nextPage}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{/pageData.navigation.hasNext}}
            {{^pageData.navigation.hasNext}}
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&raquo;</span>
                </li>
            {{/pageData.navigation.hasNext}}
        </ul>
    </nav>
</div>

{{> layout/footer}}